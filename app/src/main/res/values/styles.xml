<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Screen 1: TextViews style. -->
    <style name="StyleForDescriptionTextViews">
        <item name="android:layout_marginTop">@dimen/fifteendp</item>
        <item name="android:drawablePadding">@dimen/fifteendp</item>
        <item name="android:textSize">@dimen/text_size_for_descriptions</item>
    </style>

    <style name="GreenAccentButton" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/startButtonColor</item>
    </style>

    <style name="StyleForGuizQuestion">
        <item name="android:layout_marginTop">@dimen/fifteendp</item>
        <item name="android:layout_marginBottom">@dimen/tendp</item>
        <item name="android:textSize">@dimen/twentydp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>